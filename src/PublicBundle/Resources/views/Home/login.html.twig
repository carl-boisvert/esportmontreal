{% extends "PublicBundle::layout.html.twig" %}
{% block content %}
    <h1 class="col-xs-12">Log in</h1>
    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}
    <div class="col-xs-12">
        <form role="form" action="{{ path('login_check') }}" method="post" class="col-xs-2">
            <div class="form-group">
                <label for="username">Gamertag:</label>
                <input class="form-control" id="username" type="text" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" id="password" type="password" name="_password" />
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" name="login" />
            </div>
        </form>
    </div>
{% endblock %}