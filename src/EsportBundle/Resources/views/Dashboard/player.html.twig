{% extends "EsportBundle::layout.html.twig" %}
{% block content %}
    <div class="container team">
        <h1>{{ player.gamertag }}</h1>
        <div class="col-xs-12 teamScore">
            <div class="col-xs-4">
                <h3>Rank</h3>
                <div>1er</div>
            </div>
            <div class="col-xs-4">
                <h3>Team</h3>
                {% for team in teams %}
                    <div>{{ team.name }}</div>
                {% endfor %}
            </div>
            <div class="col-xs-4">
                <h3>Score</h3>
                <div>0</div>
            </div>
        </div>
        <div class="teamAction col-xs-12">
            <a href="{{ path('_player_join', {'id':player.id}) }}" class="btn btn-primary col-xs-2">Invite to join</a>
        </div>
    </div>

{% endblock %}